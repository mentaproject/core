{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "baseUrl": "./",
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "test.ts", "dev", "dist"],
}
